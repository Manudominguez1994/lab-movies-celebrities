<div>
<h2>{{oneMovie.title}} </h2>
<p>{{oneMovie.genre}} </p>
<p>{{oneMovie.plot}} </p>
{{#each oneMovie.cast}}
<ul class="list-group">
    <li class="list-group-item" >{{this.name}} </li>
    </ul>
{{/each}}
<form action="/movies/{{oneMovie._id}}/delete" method="post">
    <button class="btn btn-danger">Delete</button>
</form>
<br>
<a href="/movies/{{oneMovie._id}}/edit"><button class="btn btn-primary" >Update</button></a>
</div>