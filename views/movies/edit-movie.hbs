<div>
<h2>Edit your movie</h2>

<form action="/movies/{{this.oneMovie._id}}/edit" method="post" >
    <label for="title">Title:</label>
        <input type="text" name="title" value="{{oneMovie.title}}">
        <br>
        <label for="genre">Genre:</label>
        <input type="text" name="genre" value="{{oneMovie.genre}}">
        <br>
        <label for="plot">Plot :</label>
        <input type="text" name="plot" value="{{oneMovie.plot}}">
        <br>
          <label for="cast">Cast :</label>
        <select name="cast" multiple>
            {{#each this.cloneCelebrities}}
            {{#if this.isSelected}}
            <option value="{{this._id}}" selected>{{this.name}}</option>
            {{else}}
            <option value="{{this._id}}">{{this.name}}</option>
            {{/if}}
            {{/each}}
        </select>
        <br>
        <button>Update</button>

      
</form>



</div>